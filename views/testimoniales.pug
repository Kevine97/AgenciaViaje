extends ../layout/index.pug

block contenido
    main.container.mt-5
        h1.text-center.mt-5.mb-5 #{pagina}
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
 
        include ../layout/blockeTestimonial.pug                        

        .row
            .col-md-12
                h2.d-block.w-100.text-center Agrega un testimonial
                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje

            .row.justify-content-center.col 
                .col-md-8 
                    form(action="/testimoniales", method="post")
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre(for="nombre", placeholder="Ingrese su nombre",
                            class="form-control", type="text", name="nombre", value=nombre) 

                        .form-group
                            label(for="email") Correo electronico
                            input#email(for="email", placeholder="Ingrese un email",
                            class="form-control", type="email", name="email", value=email)

                        .form-group
                            label(for="mensaje") Mensaje
                            textarea#mensaje(name="mensaje",placeholder="Escriba su mensaje", rows="3", class="form-control")=mensaje
                        input.btn.btn-success.btn-block(type="submit") 



            